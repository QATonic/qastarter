# QAStarter Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=debug          # error, warn, info, http, debug
LOG_CONSOLE=true         # Enable console logging
LOG_FILE=false           # Enable file logging (recommended for production)

# Cache Configuration  
DISABLE_CACHE=false      # Set to true for development hot-reload

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000   # 15 minutes in milliseconds
RATE_LIMIT_MAX=100            # Max requests per window
RATE_LIMIT_GENERATE_MAX=10    # Max project generations per window

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Database SSL Configuration (Production)
# DATABASE_CA_CERT=<base64-encoded-ca-certificate>  # Custom CA certificate for SSL
# DATABASE_SSL_REJECT_UNAUTHORIZED=false            # DANGER: Disable SSL verification (not recommended)
