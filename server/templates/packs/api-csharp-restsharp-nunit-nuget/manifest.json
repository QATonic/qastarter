{
  "id": "api-csharp-restsharp-nunit-nuget",
  "supportsDynamic": true,
  "name": "API Testing Framework",
  "description": "REST API automation framework with C#, RestSharp, and NUnit",
  "tags": [
    "api",
    "rest",
    "csharp",
    "nunit",
    "restsharp"
  ],
  "toolVersions": {
    "dotnet": "8.0",
    "restsharp": "110.2.0",
    "nunit": "3.14.0",
    "newtonsoft.json": "13.0.3"
  },
  "files": [
    {
      "path": "{{projectName}}.csproj",
      "isTemplate": true,
      "description": ".NET project file"
    },
    {
      "path": ".gitignore",
      "isTemplate": true,
      "description": "Git ignore patterns"
    },
    {
      "path": "README.md",
      "isTemplate": true,
      "description": "Project documentation"
    },
    {
      "path": ".github/workflows/tests.yml",
      "isTemplate": true,
      "description": "GitHub Actions CI/CD",
      "conditional": {
        "cicdTool": "github-actions"
      }
    },
    {
      "path": "Jenkinsfile",
      "isTemplate": true,
      "description": "Jenkins declarative pipeline for CI/CD",
      "conditional": {
        "cicdTool": "jenkins"
      }
    },
    {
      "path": "azure-pipelines.yml",
      "isTemplate": true,
      "description": "Azure DevOps pipeline configuration",
      "conditional": {
        "cicdTool": "azure-devops"
      }
    },
    {
      "path": "Config/Settings.cs",
      "isTemplate": true,
      "description": "Configuration management"
    },
    {
      "path": "Config/Environments.cs",
      "isTemplate": true,
      "description": "Environment configurations"
    },
    {
      "path": "Core/ApiClient.cs",
      "isTemplate": true,
      "description": "Base API client"
    },
    {
      "path": "Core/RequestBuilder.cs",
      "isTemplate": true,
      "description": "HTTP request builder"
    },
    {
      "path": "Core/ResponseValidator.cs",
      "isTemplate": true,
      "description": "Response validation utilities"
    },
    {
      "path": "Models/User.cs",
      "isTemplate": true,
      "description": "User data model"
    },
    {
      "path": "Models/ApiResponse.cs",
      "isTemplate": true,
      "description": "API response model"
    },
    {
      "path": "Utils/AuthManager.cs",
      "isTemplate": true,
      "description": "Authentication manager"
    },
    {
      "path": "Utils/JsonUtils.cs",
      "isTemplate": true,
      "description": "JSON utilities"
    },
    {
      "path": "Utils/Logger.cs",
      "isTemplate": true,
      "description": "Logging configuration"
    },
    {
      "path": "Schemas/user-schema.json",
      "isTemplate": true,
      "description": "JSON schema for user"
    },
    {
      "path": "Tests/BaseTest.cs",
      "isTemplate": true,
      "description": "Base test class"
    },
    {
      "path": "Tests/UserTests.cs",
      "isTemplate": true,
      "description": "User API tests"
    },
    {
      "path": "Tests/AuthenticationTests.cs",
      "isTemplate": true,
      "description": "Authentication tests"
    },
    {
      "path": "Tests/DataDrivenTests.cs",
      "isTemplate": true,
      "description": "Data-driven tests"
    },
    {
      "path": "Data/users.json",
      "isTemplate": true,
      "description": "Test user data"
    },
    {
      "path": "Data/test-cases.json",
      "isTemplate": true,
      "description": "Test case data"
    },
    {
      "path": "Utils/RetryHelper.cs",
      "isTemplate": true,
      "description": "Retry mechanism for flaky requests"
    },
    {
      "path": "Utils/DataReader.cs",
      "isTemplate": true,
      "description": "Test data file reader"
    },
    {
      "path": "Dockerfile",
      "isTemplate": true,
      "description": "Docker configuration for containerized testing"
    },
    {
      "path": "Features/Login.feature",
      "isTemplate": true,
      "description": "Sample login feature",
      "conditional": {
        "testingPattern": "bdd"
      }
    },
    {
      "path": "StepDefinitions/LoginSteps.cs",
      "isTemplate": true,
      "description": "SpecFlow step definitions",
      "conditional": {
        "testingPattern": "bdd"
      }
    }
  ],
  "supportedCombination": {
    "testingType": "api",
    "framework": "restsharp",
    "language": "csharp",
    "testRunner": "nunit",
    "buildTool": "nuget"
  },
  "dynamicSupport": {
    "reportingTools": [
      "allure",
      "extent-reports",
      "nunit-reports"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops",
      "circleci"
    ],
    "testingPatterns": [
      "data-driven",
      "bdd"
    ]
  }
}
