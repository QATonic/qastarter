pipeline {
    agent any

    tools {
        go 'go-1.21'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Dependencies') {
            steps {
                sh 'go mod download'
            }
        }

        stage('Test') {
            steps {
                sh 'go test ./tests/... -v'
            }
        }
    }

    post {
        always {
            junit 'report.xml'
        }
    }
}
