package {{packageName}}.config;

/**
 * Environment enumeration for API testing
 * Defines available test environments
 */
public enum Environment {
    DEV("dev"),
    QA("qa"), 
    STAGING("staging"),
    PROD("prod");

    private final String value;

    Environment(String value) {
        this.value = value;
    }

    public String getValue() {
        return value;
    }

    /**
     * Get environment by string value
     * 
     * @param value Environment string value
     * @return Environment enum
     */
    public static Environment fromValue(String value) {
        for (Environment env : Environment.values()) {
            if (env.value.equalsIgnoreCase(value)) {
                return env;
            }
        }
        throw new IllegalArgumentException("Unknown environment: " + value);
    }

    /**
     * Check if current environment is development
     * 
     * @return true if dev environment
     */
    public static boolean isDev() {
        return ConfigurationReader.getEnvironment().equals(DEV.getValue());
    }

    /**
     * Check if current environment is QA
     * 
     * @return true if QA environment
     */
    public static boolean isQA() {
        return ConfigurationReader.getEnvironment().equals(QA.getValue());
    }

    /**
     * Check if current environment is production
     * 
     * @return true if production environment
     */
    public static boolean isProduction() {
        return ConfigurationReader.getEnvironment().equals(PROD.getValue());
    }
}