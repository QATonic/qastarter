/**
 * Config Reader - Load API environment settings.
 */
require("dotenv").config();
const path = require("path");

const env = process.env.ENV || "dev";
const config = require(path.join(__dirname, `${env}.json`));

const apiConfig = {
  baseUrl: process.env.BASE_URL || config.baseUrl || "https://jsonplaceholder.typicode.com",
  timeout: parseInt(process.env.TIMEOUT || config.timeout || "30") * 1000,
  contentType: process.env.CONTENT_TYPE || config.contentType || "application/json",
};

console.log(`[Config] Environment: ${env}, Base URL: ${apiConfig.baseUrl}`);

module.exports = { apiConfig };