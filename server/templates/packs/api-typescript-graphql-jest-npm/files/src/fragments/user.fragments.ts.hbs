import { gql } from '@apollo/client/core';

export const USER_FRAGMENT = gql`
fragment UserFields on User {
id
email
name
role
createdAt
updatedAt
}
`;

export const USER_WITH_PROFILE_FRAGMENT = gql`
${USER_FRAGMENT}
fragment UserWithProfile on User {
...UserFields
profile {
avatar
bio
location
}
}
`;