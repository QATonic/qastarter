{
  "id": "api-typescript-graphql-jest-npm",
  "displayName": "TypeScript GraphQL API Framework",
  "description": "Professional GraphQL API automation framework with TypeScript, graphql-request, Jest, and npm",
  "version": "2.0.0",
  "supportsDynamic": true,
  "supportedCombination": {
    "testingType": "api",
    "framework": "graphql",
    "language": "typescript",
    "testRunner": "jest",
    "buildTool": "npm"
  },
  "toolVersions": {
    "node": "18+",
    "graphql-request": "6.1.0",
    "jest": "29.7.0",
    "typescript": "5.3.0"
  },
  "files": [
    {
      "path": "package.json",
      "isTemplate": true,
      "description": "Node.js package configuration"
    },
    {
      "path": "tsconfig.json",
      "isTemplate": true,
      "description": "TypeScript configuration"
    },
    {
      "path": "jest.config.ts",
      "isTemplate": true,
      "description": "Jest configuration"
    },
    {
      "path": "README.md",
      "isTemplate": true,
      "description": "Project documentation"
    },
    {
      "path": ".github/workflows/tests.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "github-actions"
      },
      "description": "GitHub Actions workflow"
    },
    {
      "path": "Jenkinsfile",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "jenkins"
      },
      "description": "Jenkins pipeline"
    },
    {
      "path": "azure-pipelines.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "azure-devops"
      },
      "description": "Azure DevOps pipeline"
    },
    {
      "path": ".gitlab-ci.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "gitlab-ci"
      },
      "description": "GitLab CI pipeline"
    },
    {
      "path": "Dockerfile",
      "isTemplate": true,
      "conditional": {
        "utilities.includeDocker": true
      },
      "description": "Docker configuration"
    },
    {
      "path": "docker-compose.yml",
      "isTemplate": true,
      "conditional": {
        "utilities.includeDockerCompose": true
      },
      "description": "Docker Compose configuration"
    },
    {
      "path": "allure.properties",
      "isTemplate": true,
      "conditional": {
        "reportingTool": "allure"
      },
      "description": "Allure configuration"
    },
    {
      "path": "config/ConfigReader.ts",
      "isTemplate": true,
      "description": "Configuration reader"
    },
    {
      "path": "core/GraphQLClient.ts",
      "isTemplate": true,
      "description": "GraphQL client wrapper"
    },
    {
      "path": "src/client/graphql-client.ts",
      "isTemplate": true,
      "description": "GraphQL client implementation"
    },
    {
      "path": "src/config/environments.ts",
      "isTemplate": true,
      "description": "Environment configurations"
    },
    {
      "path": "src/types/graphql.types.ts",
      "isTemplate": true,
      "description": "GraphQL type definitions"
    },
    {
      "path": "src/queries/user.queries.ts",
      "isTemplate": true,
      "description": "User GraphQL queries"
    },
    {
      "path": "src/mutations/user.mutations.ts",
      "isTemplate": true,
      "description": "User GraphQL mutations"
    },
    {
      "path": "src/fragments/user.fragments.ts",
      "isTemplate": true,
      "description": "User GraphQL fragments"
    },
    {
      "path": "src/utils/test-helpers.ts",
      "isTemplate": true,
      "description": "Test helper utilities"
    },
    {
      "path": "queries/SpaceXQueries.ts",
      "isTemplate": true,
      "description": "SpaceX API example queries"
    },
    {
      "path": "utils/Logger.ts",
      "isTemplate": true,
      "description": "Logging utility"
    },
    {
      "path": "tests/setup.ts",
      "isTemplate": true,
      "description": "Jest test setup"
    },
    {
      "path": "tests/GraphQLTests.spec.ts",
      "isTemplate": true,
      "description": "GraphQL API tests"
    },
    {
      "path": "tests/queries/user.queries.test.ts",
      "isTemplate": true,
      "description": "User query tests"
    },
    {
      "path": "tests/mutations/user.mutations.test.ts",
      "isTemplate": true,
      "description": "User mutation tests"
    },
    {
      "path": "tests/schema/schema.validation.test.ts",
      "isTemplate": true,
      "conditional": {
        "testingPattern": "schema-validation"
      },
      "description": "GraphQL schema validation tests"
    },
    {
      "path": "tests/integration/auth.integration.test.ts",
      "isTemplate": true,
      "description": "Authentication integration tests"
    }
  ],
  "directories": [
    "logs",
    "reports"
  ],
  "dynamicSupport": {
    "reportingTools": [
      "jest-html-reporter",
      "allure"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops"
    ],
    "testingPatterns": [
      "contract-testing",
      "schema-validation"
    ]
  }
}