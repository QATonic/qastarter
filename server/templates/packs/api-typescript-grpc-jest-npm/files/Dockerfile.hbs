# gRPC API Testing - Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install protobuf compiler
RUN apk add --no-cache protobuf

# Copy package files
COPY package*.json ./
RUN npm ci

# Copy application
COPY . .

# Build TypeScript
RUN npm run build 2>/dev/null || true

# Environment variables
ENV NODE_ENV=test
ENV TEST_ENV=qa
ENV GRPC_HOST=localhost
ENV GRPC_PORT=50051

# Run tests
CMD ["npm", "test"]
