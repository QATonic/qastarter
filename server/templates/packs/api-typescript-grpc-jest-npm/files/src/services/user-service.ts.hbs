import { userServiceClient, createMetadata, createDeadline } from '../client/grpc-client';
import { User, CreateUserRequest, UpdateUserRequest, ListUsersRequest } from '../types/grpc.types';
import * as grpc from '@grpc/grpc-js';

export class UserService {
private authToken?: string;

setAuthToken(token: string) {
this.authToken = token;
}

/**
* Get user by ID (Unary RPC)
*/
getUser(request: { id: string }): Promise<User> {
    return new Promise((resolve, reject) => {
    const metadata = createMetadata(this.authToken);
    const deadline = createDeadline();

    userServiceClient.GetUser(request, metadata, { deadline }, (error: grpc.ServiceError | null, response: User) => {
    if (error) {
    reject(error);
    } else {
    resolve(response);
    }
    });
    });
    }

    /**
    * Create user (Unary RPC)
    */
    createUser(request: CreateUserRequest): Promise<User> {
        return new Promise((resolve, reject) => {
        const metadata = createMetadata(this.authToken);
        const deadline = createDeadline();

        userServiceClient.CreateUser(request, metadata, { deadline }, (error: grpc.ServiceError | null, response: User)
        => {
        if (error) {
        reject(error);
        } else {
        resolve(response);
        }
        });
        });
        }

        /**
        * Update user (Unary RPC)
        */
        updateUser(request: UpdateUserRequest): Promise<User> {
            return new Promise((resolve, reject) => {
            const metadata = createMetadata(this.authToken);
            const deadline = createDeadline();

            userServiceClient.UpdateUser(request, metadata, { deadline }, (error: grpc.ServiceError | null, response:
            User) => {
            if (error) {
            reject(error);
            } else {
            resolve(response);
            }
            });
            });
            }

            /**
            * Delete user (Unary RPC)
            */
            deleteUser(request: { id: string }): Promise<{ success: boolean; message?: string }> {
                return new Promise((resolve, reject) => {
                const metadata = createMetadata(this.authToken);
                const deadline = createDeadline();

                userServiceClient.DeleteUser(request, metadata, { deadline }, (error: grpc.ServiceError | null,
                response: any) => {
                if (error) {
                reject(error);
                } else {
                resolve(response);
                }
                });
                });
                }

                /**
                * List users (Server Streaming RPC)
                */
                listUsers(request: ListUsersRequest): grpc.ClientReadableStream<User> {
                    const metadata = createMetadata(this.authToken);
                    return userServiceClient.ListUsers(request, metadata);
                    }

                    /**
                    * Collect all users from stream
                    */
                    async listUsersAsync(request: ListUsersRequest): Promise<User[]> {
                        return new Promise((resolve, reject) => {
                        const users: User[] = [];
                        const stream = this.listUsers(request);

                        stream.on('data', (user: User) => {
                        users.push(user);
                        });

                        stream.on('end', () => {
                        resolve(users);
                        });

                        stream.on('error', (error: grpc.ServiceError) => {
                        reject(error);
                        });
                        });
                        }
                        }

                        export const userService = new UserService();