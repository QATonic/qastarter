{
  "id": "api-typescript-supertest-jest-npm",
  "displayName": "API Testing Framework",
  "supportsDynamic": true,
  "name": "API Testing Framework",
  "description": "REST API automation framework with TypeScript, Supertest, and Jest",
  "tags": [
    "api",
    "rest",
    "typescript",
    "jest",
    "supertest"
  ],
  "toolVersions": {
    "node": "18+",
    "typescript": "5.3.0",
    "supertest": "6.3.3",
    "jest": "29.7.0",
    "ajv": "8.12.0",
    "pact": "12.1.0"
  },
  "files": [
    {
      "path": "package.json",
      "isTemplate": true,
      "description": "NPM package configuration"
    },
    {
      "path": "tsconfig.json",
      "isTemplate": true,
      "description": "TypeScript configuration"
    },
    {
      "path": "jest.config.ts",
      "isTemplate": true,
      "description": "Jest configuration"
    },
    {
      "path": ".gitignore",
      "isTemplate": true,
      "description": "Git ignore patterns"
    },
    {
      "path": "README.md",
      "isTemplate": true,
      "description": "Project documentation"
    },
    {
      "path": ".github/workflows/tests.yml",
      "isTemplate": true,
      "description": "GitHub Actions CI/CD",
      "conditional": {
        "cicdTool": "github-actions"
      }
    },
    {
      "path": "Jenkinsfile",
      "isTemplate": true,
      "description": "Jenkins CI/CD pipeline",
      "conditional": {
        "cicdTool": "jenkins"
      }
    },
    {
      "path": "azure-pipelines.yml",
      "isTemplate": true,
      "description": "Azure DevOps CI/CD pipeline",
      "conditional": {
        "cicdTool": "azure-devops"
      }
    },
    {
      "path": "config/settings.ts",
      "isTemplate": true,
      "description": "Configuration management"
    },
    {
      "path": "config/environments.ts",
      "isTemplate": true,
      "description": "Environment configurations"
    },
    {
      "path": "core/ApiClient.ts",
      "isTemplate": true,
      "description": "Supertest API client wrapper"
    },
    {
      "path": "core/SchemaValidator.ts",
      "isTemplate": true,
      "description": "JSON schema validation utilities"
    },
    {
      "path": "models/User.ts",
      "isTemplate": true,
      "description": "User model and schema"
    },
    {
      "path": "utils/logger.ts",
      "isTemplate": true,
      "description": "Winston logger utility"
    },
    {
      "path": "tests/data/users.ts",
      "isTemplate": true,
      "description": "Test data for users"
    },
    {
      "path": "tests/api/users.spec.ts",
      "isTemplate": true,
      "description": "User API test cases"
    },
    {
      "path": "utils/retryHelper.ts",
      "isTemplate": true,
      "description": "Retry mechanism for flaky requests"
    },
    {
      "path": "utils/authHelper.ts",
      "isTemplate": true,
      "description": "Authentication helper utilities"
    },
    {
      "path": "utils/dataGenerator.ts",
      "isTemplate": true,
      "description": "Test data generator"
    },
    {
      "path": "types/api.types.ts",
      "isTemplate": true,
      "description": "TypeScript type definitions for API"
    },
    {
      "path": "features/login.feature",
      "isTemplate": true,
      "description": "Sample login feature",
      "conditional": {
        "testingPattern": "bdd"
      }
    },
    {
      "path": "step-definitions/loginSteps.ts",
      "isTemplate": true,
      "description": "Cucumber-js step definitions",
      "conditional": {
        "testingPattern": "bdd"
      }
    },
    {
      "path": "Dockerfile",
      "isTemplate": true,
      "description": "Docker configuration for containerized testing",
      "conditional": {
        "utilities.includeDocker": true
      }
    },
    {
      "path": "docker-compose.yml",
      "isTemplate": true,
      "description": "Docker Compose for API testing",
      "conditional": {
        "utilities.includeDockerCompose": true
      }
    },
    {
      "path": "tests/contracts/userConsumer.pact.spec.ts",
      "isTemplate": true,
      "description": "Pact consumer contract tests",
      "conditional": {
        "testingPattern": "contract-testing"
      }
    },
    {
      "path": "tests/contracts/providerVerification.spec.ts",
      "isTemplate": true,
      "description": "Pact provider verification tests",
      "conditional": {
        "testingPattern": "contract-testing"
      }
    },
    {
      "path": "config/pactBroker.ts",
      "isTemplate": true,
      "description": "Pact Broker configuration",
      "conditional": {
        "testingPattern": "contract-testing"
      }
    }
  ],
  "supportedCombination": {
    "testingType": "api",
    "framework": "supertest",
    "language": "typescript",
    "testRunner": "jest",
    "buildTool": "npm"
  },
  "dynamicSupport": {
    "reportingTools": [
      "allure",
      "jest-html-reporter",
      "mochawesome"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops",
      "circleci"
    ],
    "testingPatterns": [
      "data-driven",
      "bdd",
      "contract-testing"
    ]
  }
}