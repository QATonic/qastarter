{
  "id": "api-typescript-supertest-jest-npm",
  "displayName": "TypeScript Supertest API Framework",
  "description": "Professional API automation framework with TypeScript, Supertest, Jest, and npm",
  "version": "2.0.0",
  "supportsDynamic": true,
  "supportedCombination": {
    "testingType": "api",
    "framework": "supertest",
    "language": "typescript",
    "testRunner": "jest",
    "buildTool": "npm"
  },
  "toolVersions": {
    "node": "18+",
    "supertest": "6.3.0",
    "jest": "29.7.0",
    "typescript": "5.3.0"
  },
  "files": [
    {
      "path": "package.json",
      "isTemplate": true,
      "description": "Node.js package configuration"
    },
    {
      "path": "tsconfig.json",
      "isTemplate": true,
      "description": "TypeScript configuration"
    },
    {
      "path": "jest.config.ts",
      "isTemplate": true,
      "description": "Jest configuration"
    },
    {
      "path": "README.md",
      "isTemplate": true,
      "description": "Project documentation"
    },
    {
      "path": ".github/workflows/tests.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "github-actions"
      },
      "description": "GitHub Actions workflow"
    },
    {
      "path": "Jenkinsfile",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "jenkins"
      },
      "description": "Jenkins pipeline"
    },
    {
      "path": "azure-pipelines.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "azure-devops"
      },
      "description": "Azure DevOps pipeline"
    },
    {
      "path": ".gitlab-ci.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "gitlab-ci"
      },
      "description": "GitLab CI pipeline"
    },
    {
      "path": "Dockerfile",
      "isTemplate": true,
      "conditional": {
        "utilities.includeDocker": true
      },
      "description": "Docker configuration"
    },
    {
      "path": "docker-compose.yml",
      "isTemplate": true,
      "conditional": {
        "utilities.includeDockerCompose": true
      },
      "description": "Docker Compose configuration"
    },
    {
      "path": "allure.properties",
      "isTemplate": true,
      "conditional": {
        "reportingTool": "allure"
      },
      "description": "Allure configuration"
    },
    {
      "path": "config/ConfigReader.ts",
      "isTemplate": true,
      "description": "Configuration reader"
    },
    {
      "path": "config/dev.json",
      "isTemplate": false,
      "description": "Development environment config"
    },
    {
      "path": "config/qa.json",
      "isTemplate": false,
      "description": "QA environment config"
    },
    {
      "path": "config/environments.ts",
      "isTemplate": true,
      "description": "Environment configurations"
    },
    {
      "path": "config/settings.ts",
      "isTemplate": true,
      "description": "Application settings"
    },
    {
      "path": "config/pactBroker.ts",
      "isTemplate": true,
      "conditional": {
        "testingPattern": "contract-testing"
      },
      "description": "Pact Broker configuration"
    },
    {
      "path": "core/ApiClient.ts",
      "isTemplate": true,
      "description": "API client wrapper"
    },
    {
      "path": "core/SchemaValidator.ts",
      "isTemplate": true,
      "description": "JSON Schema validation"
    },
    {
      "path": "models/User.ts",
      "isTemplate": true,
      "description": "User model"
    },
    {
      "path": "types/api.types.ts",
      "isTemplate": true,
      "description": "API type definitions"
    },
    {
      "path": "utils/Logger.ts",
      "isTemplate": true,
      "description": "Logging utility"
    },
    {
      "path": "utils/ResponseValidator.ts",
      "isTemplate": true,
      "description": "Response validation helper"
    },
    {
      "path": "utils/retryHelper.ts",
      "isTemplate": true,
      "description": "Retry logic helper"
    },
    {
      "path": "utils/authHelper.ts",
      "isTemplate": true,
      "description": "Authentication helper"
    },
    {
      "path": "utils/dataGenerator.ts",
      "isTemplate": true,
      "conditional": {
        "utilities.dataProvider": true
      },
      "description": "Test data generator"
    },
    {
      "path": "tests/setup.ts",
      "isTemplate": true,
      "description": "Jest test setup"
    },
    {
      "path": "tests/UserTests.spec.ts",
      "isTemplate": true,
      "description": "User API tests"
    },
    {
      "path": "tests/api/users.spec.ts",
      "isTemplate": true,
      "description": "Users endpoint tests"
    },
    {
      "path": "tests/data/users.ts",
      "isTemplate": true,
      "conditional": {
        "utilities.dataProvider": true
      },
      "description": "User test data"
    },
    {
      "path": "tests/contracts/userConsumer.pact.spec.ts",
      "isTemplate": true,
      "conditional": {
        "testingPattern": "contract-testing"
      },
      "description": "Pact consumer contract test"
    },
    {
      "path": "tests/contracts/providerVerification.spec.ts",
      "isTemplate": true,
      "conditional": {
        "testingPattern": "contract-testing"
      },
      "description": "Pact provider verification"
    },
    {
      "path": "features/login.feature",
      "isTemplate": true,
      "conditional": {
        "testingPattern": "bdd"
      },
      "description": "Login feature file"
    },
    {
      "path": "step-definitions/loginSteps.ts",
      "isTemplate": true,
      "conditional": {
        "testingPattern": "bdd"
      },
      "description": "Login step definitions"
    }
  ],
  "directories": [
    "logs",
    "reports"
  ],
  "dynamicSupport": {
    "reportingTools": [
      "allure",
      "jest-html-reporter",
      "mochawesome"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops"
    ],
    "testingPatterns": [
      "data-driven",
      "bdd",
      "contract-testing"
    ]
  }
}