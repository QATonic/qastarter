package {{groupId}}.utils;

import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;

/**
 * Logger wrapper for consistent logging across desktop automation framework
 * Provides convenient static methods for different log levels
 */
public class Log {

    private static final Logger logger = LogManager.getLogger(Log.class);

    /**
     * Log info message
     * @param message Message to log
     */
    public static void info(String message) {
        logger.info(message);
    }

    /**
     * Log info message with throwable
     * @param message Message to log
     * @param throwable Exception/error to log
     */
    public static void info(String message, Throwable throwable) {
        logger.info(message, throwable);
    }

    /**
     * Log debug message
     * @param message Message to log
     */
    public static void debug(String message) {
        logger.debug(message);
    }

    /**
     * Log debug message with throwable
     * @param message Message to log
     * @param throwable Exception/error to log
     */
    public static void debug(String message, Throwable throwable) {
        logger.debug(message, throwable);
    }

    /**
     * Log warning message
     * @param message Message to log
     */
    public static void warn(String message) {
        logger.warn(message);
    }

    /**
     * Log warning message with throwable
     * @param message Message to log
     * @param throwable Exception/error to log
     */
    public static void warn(String message, Throwable throwable) {
        logger.warn(message, throwable);
    }

    /**
     * Log error message
     * @param message Message to log
     */
    public static void error(String message) {
        logger.error(message);
    }

    /**
     * Log error message with throwable
     * @param message Message to log
     * @param throwable Exception/error to log
     */
    public static void error(String message, Throwable throwable) {
        logger.error(message, throwable);
    }

    /**
     * Log fatal message
     * @param message Message to log
     */
    public static void fatal(String message) {
        logger.fatal(message);
    }

    /**
     * Log fatal message with throwable
     * @param message Message to log
     * @param throwable Exception/error to log
     */
    public static void fatal(String message, Throwable throwable) {
        logger.fatal(message, throwable);
    }

    /**
     * Log trace message
     * @param message Message to log
     */
    public static void trace(String message) {
        logger.trace(message);
    }

    /**
     * Log trace message with throwable
     * @param message Message to log
     * @param throwable Exception/error to log
     */
    public static void trace(String message, Throwable throwable) {
        logger.trace(message, throwable);
    }

    /**
     * Check if debug level is enabled
     * @return true if debug level is enabled
     */
    public static boolean isDebugEnabled() {
        return logger.isDebugEnabled();
    }

    /**
     * Check if info level is enabled
     * @return true if info level is enabled
     */
    public static boolean isInfoEnabled() {
        return logger.isInfoEnabled();
    }

    /**
     * Check if warn level is enabled
     * @return true if warn level is enabled
     */
    public static boolean isWarnEnabled() {
        return logger.isWarnEnabled();
    }

    /**
     * Check if error level is enabled
     * @return true if error level is enabled
     */
    public static boolean isErrorEnabled() {
        return logger.isErrorEnabled();
    }

    /**
     * Check if trace level is enabled
     * @return true if trace level is enabled
     */
    public static boolean isTraceEnabled() {
        return logger.isTraceEnabled();
    }

    /**
     * Log test step start
     * @param stepDescription Description of the test step
     */
    public static void startStep(String stepDescription) {
        info(">>> STEP START: " + stepDescription);
    }

    /**
     * Log test step completion
     * @param stepDescription Description of the test step
     */
    public static void endStep(String stepDescription) {
        info("<<< STEP END: " + stepDescription);
    }

    /**
     * Log test step with pass status
     * @param stepDescription Description of the test step
     */
    public static void passStep(String stepDescription) {
        info("âœ“ STEP PASSED: " + stepDescription);
    }

    /**
     * Log test step with fail status
     * @param stepDescription Description of the test step
     * @param reason Reason for failure
     */
    public static void failStep(String stepDescription, String reason) {
        error("âœ— STEP FAILED: " + stepDescription + " - " + reason);
    }

    /**
     * Log test start
     * @param testName Name of the test
     */
    public static void startTest(String testName) {
        info("=".repeat(60));
        info(">>> TEST START: " + testName);
        info("=".repeat(60));
    }

    /**
     * Log test completion
     * @param testName Name of the test
     * @param status Test status (PASSED/FAILED/SKIPPED)
     */
    public static void endTest(String testName, String status) {
        info("=".repeat(60));
        info("<<< TEST END: " + testName + " - " + status);
        info("=".repeat(60));
    }

    /**
     * Log suite start
     * @param suiteName Name of the test suite
     */
    public static void startSuite(String suiteName) {
        info("#".repeat(80));
        info(">>> SUITE START: " + suiteName);
        info("#".repeat(80));
    }

    /**
     * Log suite completion
     * @param suiteName Name of the test suite
     */
    public static void endSuite(String suiteName) {
        info("#".repeat(80));
        info("<<< SUITE END: " + suiteName);
        info("#".repeat(80));
    }

    /**
     * Log assertion
     * @param condition Condition being asserted
     * @param actual Actual value
     * @param expected Expected value
     */
    public static void assertion(String condition, Object actual, Object expected) {
        info("ASSERTION: " + condition + " | Expected: " + expected + " | Actual: " + actual);
    }

    /**
     * Log verification
     * @param verificationDescription Description of what's being verified
     * @param result Result of verification (true/false)
     */
    public static void verification(String verificationDescription, boolean result) {
        if (result) {
            info("âœ“ VERIFICATION PASSED: " + verificationDescription);
        } else {
            error("âœ— VERIFICATION FAILED: " + verificationDescription);
        }
    }

    /**
     * Log screenshot capture
     * @param screenshotPath Path to the captured screenshot
     */
    public static void screenshot(String screenshotPath) {
        info("ðŸ“¸ SCREENSHOT: " + screenshotPath);
    }

    /**
     * Log action being performed
     * @param action Description of the action
     */
    public static void action(String action) {
        info("â–¶ ACTION: " + action);
    }

    /**
     * Log configuration or setup information
     * @param configInfo Configuration information
     */
    public static void config(String configInfo) {
        info("âš™ CONFIG: " + configInfo);
    }

    /**
     * Log performance information
     * @param operation Description of the operation
     * @param duration Duration in milliseconds
     */
    public static void performance(String operation, long duration) {
        info("â± PERFORMANCE: " + operation + " took " + duration + "ms");
    }

    /**
     * Log environment information
     * @param envInfo Environment information
     */
    public static void environment(String envInfo) {
        info("ðŸŒ ENVIRONMENT: " + envInfo);
    }

    /**
     * Log separator line
     * @param character Character to use for separator
     * @param length Length of separator line
     */
    public static void separator(char character, int length) {
        info(String.valueOf(character).repeat(length));
    }

    /**
     * Log separator line with default character and length
     */
    public static void separator() {
        separator('-', 50);
    }
}