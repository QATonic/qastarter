        calculatorPage = new CalculatorPage();
        Assert.assertTrue(calculatorPage.waitForPageToLoad(), 
                         "Application should be loaded");
    }

    @Test(groups = {"smoke", "calculator"},
          description = "Verify basic addition calculation")
    public void testBasicAddition() {
        // Step 1: Verify app is ready
        logInfo("Testing basic addition: 5 + 3 = 8");
        
