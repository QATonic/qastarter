<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Desktop Tests Suite" 
       verbose="2" 
       parallel="false" 
       thread-count="1"
       preserve-order="true">
    
    <!-- Suite Parameters -->
    <parameter name="environment" value="dev"/>
    
    <!-- Listeners -->
    <listeners>
        <listener class-name="{{groupId}}.listeners.TestListener"/>
    </listeners>
    
    <!-- Desktop Application Tests -->
    <test name="Desktop Application Tests" 
          group-by-instances="true"
          preserve-order="true">
        <groups>
            <run>
                <include name="basic"/>
                <include name="calculator"/>
                <include name="notepad"/>
                <include name="desktop"/>
            </run>
        </groups>
        <classes>
            <class name="{{groupId}}.tests.CalculatorTests"/>
            <class name="{{groupId}}.tests.NotepadTests"/>
            <class name="{{groupId}}.tests.WindowsIntegrationTests"/>
        </classes>
    </test>
    
</suite>