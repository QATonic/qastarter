trigger:
- main

pool:
vmImage: 'ubuntu-latest'

steps:
- task: FlutterInstall@0
inputs:
mode: 'auto'
channel: 'stable'
version: 'latest'

- script: flutter pub get
displayName: 'Get dependencies'

- script: flutter analyze
displayName: 'Analyze project'

- script: flutter test
displayName: 'Run tests'