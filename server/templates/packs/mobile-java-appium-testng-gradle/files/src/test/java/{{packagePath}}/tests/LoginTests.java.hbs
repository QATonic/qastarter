public class LoginTests extends BaseTest {

    // ========== UPDATE THESE VALUES ==========
    private static final String TEST_USERNAME = "YOUR_USERNAME_HERE";
    private static final String TEST_PASSWORD = "YOUR_PASSWORD_HERE";
    // ==========================================

    @Test(groups = {"smoke", "login"}, 
          description = "Verify successful login with valid credentials")
    public void testValidLogin() {
        // Step 1: Verify login page is loaded
        LoginPage loginPage = new LoginPage();
        Assert.assertTrue(loginPage.isPageLoaded(), "Login page should be loaded");
        
        // Step 2: Enter credentials and login
        loginPage.performLogin(TEST_USERNAME, TEST_PASSWORD);
        
        // Step 3: Verify successful login
        HomePage homePage = new HomePage();
        Assert.assertTrue(homePage.isPageLoaded(), "Home page should be loaded after login");
        
