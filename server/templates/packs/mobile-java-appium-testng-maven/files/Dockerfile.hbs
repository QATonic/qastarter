# {{projectName}} - Mobile Test Automation with Appium
# Dockerfile for running Appium tests in containerized environment

FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app

# Copy pom.xml and download dependencies
COPY pom.xml ./
RUN mvn dependency:go-offline -B

# Copy source code
COPY src ./src

# Build the project
RUN mvn compile -DskipTests

# Test stage
FROM maven:3.9-eclipse-temurin-17 AS test
WORKDIR /app

# Install Android SDK command line tools
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Copy built application
COPY --from=build /app ./
COPY --from=build /root/.m2 /root/.m2

# Set environment variables
ENV TEST_ENV=qa
ENV PLATFORM=android
ENV APPIUM_HOST=appium
ENV APPIUM_PORT=4723

# Create directories for test results
RUN mkdir -p /app/target/surefire-reports /app/target/screenshots

# Default command runs all tests
ENTRYPOINT ["mvn", "test"]
CMD ["-Dplatform=android", "-Denv=qa"]
