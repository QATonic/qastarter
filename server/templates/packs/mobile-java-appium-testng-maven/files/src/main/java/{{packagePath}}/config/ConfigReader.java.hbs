package {{javaPackage}}.config;

import java.io.InputStream;
import java.util.Properties;

/**
 * Configuration Reader - Load Appium and device settings.
 */
public class ConfigReader {

    private static Properties properties;
    private static final String ENV = System.getProperty("env", "dev");

    static {
        loadProperties();
    }

    private static void loadProperties() {
        properties = new Properties();
        String configFile = "config/" + ENV + ".properties";
        
        try (InputStream input = ConfigReader.class.getClassLoader().getResourceAsStream(configFile)) {
            if (input != null) {
                properties.load(input);
                System.out.println("[Config] Loaded: " + configFile);
            }
        } catch (Exception e) {
            System.err.println("[Config] Error: " + e.getMessage());
        }
    }

    public static String get(String key, String defaultValue) {
        String envValue = System.getProperty(key);
        return envValue != null ? envValue : properties.getProperty(key, defaultValue);
    }

    // Appium Server
    public static String getAppiumUrl() {
        return get("appium.url", "http://127.0.0.1:4723");
    }

    // Platform
    public static String getPlatform() {
        return get("platform", "android");
    }

    // Device
    public static String getDeviceName() {
        return get("device.name", "emulator-5554");
    }

    // App
    public static String getAppPath() {
        return get("app.path", "./apps/saucedemo.apk");
    }

    // Timeouts
    public static int getImplicitWait() {
        return Integer.parseInt(get("implicit.wait", "10"));
    }
}