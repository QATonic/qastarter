{
"name": "{{projectName}}",
"version": "1.0.0",
"description": "Appium test automation framework with JavaScript and Jest",
"scripts": {
{{#if (eq testingPattern "bdd")}}
"test": "cucumber-js",
"test:android": "PLATFORM=Android cucumber-js",
"test:ios": "PLATFORM=iOS cucumber-js",
"test:watch": "cucumber-js --watch",
{{else}}
"test": "jest",
"test:android": "PLATFORM=Android jest",
"test:ios": "PLATFORM=iOS jest",
"test:watch": "jest --watch",
{{/if}}
{{#if (eq reportingTool "allure")}}
"report": "allure generate allure-results --clean && allure open",
"report:generate": "allure generate allure-results --clean",
{{else if (eq reportingTool "jest-html-reporter")}}
"report": "open reports/test-report.html || xdg-open reports/test-report.html || start reports/test-report.html",
{{else if (eq reportingTool "mochawesome")}}
"report": "open reports/mochawesome.html || xdg-open reports/mochawesome.html || start reports/mochawesome.html",
{{else}}
"report": "echo 'Test results available in reports/'",
{{/if}}
"clean": "rm -rf reports screenshots logs"
},
"keywords": ["appium", "testing", "automation", "mobile", "jest"],
"author": "",
"license": "ISC",
"devDependencies": {
"appium": "^2.5.0",
"jest": "^29.7.0",
"webdriverio": "^8.30.0",
"@wdio/appium-service": "^8.30.0",
{{#if (eq reportingTool "jest-html-reporter")}}
"jest-html-reporter": "^3.10.2",
{{/if}}
{{#if (eq reportingTool "mochawesome")}}
"mochawesome": "^7.1.3",
{{/if}}
{{#if (eq reportingTool "allure")}}
{{#if (eq testingPattern "bdd")}}
"allure-cucumberjs": "^2.15.2",
{{else}}
"allure-jest": "^3.0.0",
{{/if}}
"allure-commandline": "^2.25.0",
{{/if}}
{{#if (eq testingPattern "bdd")}}
"@cucumber/cucumber": "^10.0.0",
{{/if}}
"winston": "^3.11.0"
},
"dependencies": {
"dotenv": "^16.3.1"
}
}