import os
from dotenv import load_dotenv

load_dotenv()

class Settings:
    """Application settings and configuration"""
    
    def __init__(self):
        self.appium_server = os.getenv("APPIUM_SERVER", "http://localhost:4723")
        self.platform = os.getenv("PLATFORM", "Android")
        self.test_env = os.getenv("TEST_ENV", "dev")
        self.implicit_wait = int(os.getenv("IMPLICIT_WAIT", "10"))
        self.explicit_wait = int(os.getenv("EXPLICIT_WAIT", "30"))
        
    def __repr__(self):
        return (
            f"Settings("
            f"appium_server={self.appium_server}, "
            f"platform={self.platform}, "
            f"test_env={self.test_env})"
        )
