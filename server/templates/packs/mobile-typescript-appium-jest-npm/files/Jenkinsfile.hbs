pipeline {
    agent {
        label 'mac'
    }
    
    tools {
        nodejs 'NodeJS {{toolVersions.node}}'
    }
    
    environment {
        TEST_ENV = 'qa'
        ANDROID_HOME = '/Users/jenkins/Library/Android/sdk'
        JAVA_HOME = '/Library/Java/JavaVirtualMachines/adoptopenjdk-11.jdk/Contents/Home'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }
        
        stage('Start Appium Server') {
            steps {
                sh 'npx appium &'
                sh 'sleep 10'
            }
        }
        
        stage('Run Mobile Tests') {
            steps {
                sh 'npm test'
            }
            post {
                always {
                    {{#if (eq reportingTool "allure")}}
                    sh 'npm run report:generate'
                    allure([
                        results: [[path: 'allure-results']]
                    ])
                    archiveArtifacts artifacts: 'allure-results/**/*', allowEmptyArchive: true
                    archiveArtifacts artifacts: 'allure-report/**/*', allowEmptyArchive: true
                    {{/if}}
                    {{#if (eq reportingTool "jest-html")}}
                    publishHTML([
                        reportDir: 'test-results',
                        reportFiles: 'test-report.html',
                        reportName: 'Mobile Test Report',
                        keepAll: true,
                        alwaysLinkToLastBuild: true
                    ])
                    archiveArtifacts artifacts: 'test-results/test-report.html', allowEmptyArchive: true
                    {{/if}}
                    {{#if (eq reportingTool "junit")}}
                    junit 'test-results/junit-results.xml'
                    archiveArtifacts artifacts: 'test-results/**/*', allowEmptyArchive: true
                    {{/if}}
                    archiveArtifacts artifacts: 'logs/**/*', allowEmptyArchive: true
                }
                failure {
                    archiveArtifacts artifacts: 'screenshots/**/*', allowEmptyArchive: true
                }
            }
        }
    }
    
    post {
        always {
            sh 'pkill -f appium || true'
            cleanWs()
        }
    }
}
