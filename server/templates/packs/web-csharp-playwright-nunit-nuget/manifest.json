{
  "id": "web-csharp-playwright-nunit-nuget",
  "displayName": "C# Playwright NUnit Framework",
  "version": "2.0.0",
  "supportsDynamic": true,
  "supportedCombination": {
    "testingType": "web",
    "framework": "playwright",
    "language": "csharp",
    "testRunner": "nunit",
    "buildTool": "nuget"
  },
  "dynamicSupport": {
    "reportingTools": [
      "allure",
      "nunit-html"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops"
    ],
    "testingPatterns": [
      "page-object-model",
      "bdd"
    ]
  },
  "toolVersions": {
    "dotnet": "8.0",
    "playwright": "1.41.0",
    "nunit": "4.0.1"
  },
  "files": [
    {
      "path": "{{projectName}}.csproj",
      "isTemplate": true
    },
    {
      "path": "Config/ConfigReader.cs",
      "isTemplate": true
    },
    {
      "path": "Pages/BasePage.cs",
      "isTemplate": true
    },
    {
      "path": "Pages/LoginPage.cs",
      "isTemplate": true
    },
    {
      "path": "Utils/PlaywrightManager.cs",
      "isTemplate": true
    },
    {
      "path": "Tests/LoginTests.cs",
      "isTemplate": true
    }
  ],
  "directories": [
    "logs",
    "screenshots",
    "reports"
  ]
}
