{
  "id": "web-csharp-playwright-nunit-nuget",
  "displayName": "Web Automation Framework",
  "supportsDynamic": true,
  "name": "Web Automation Framework",
  "description": "Playwright test automation framework with C#, NUnit, and NuGet for web testing",
  "tags": [
    "web",
    "playwright",
    "csharp",
    "nunit",
    "nuget",
    "pom"
  ],
  "toolVersions": {
    "dotnet": "8.0",
    "playwright": "1.40.0",
    "nunit": "3.14.0"
  },
  "files": [
    {
      "path": "{{projectName}}.csproj",
      "isTemplate": true,
      "description": "C# project file with Playwright and NUnit dependencies"
    },
    {
      "path": ".github/workflows/tests.yml",
      "isTemplate": true,
      "description": "GitHub Actions CI/CD workflow",
      "conditional": {
        "cicdTool": "github-actions"
      }
    },
    {
      "path": "Jenkinsfile",
      "isTemplate": true,
      "description": "Jenkins declarative pipeline for CI/CD",
      "conditional": {
        "cicdTool": "jenkins"
      }
    },
    {
      "path": "azure-pipelines.yml",
      "isTemplate": true,
      "description": "Azure DevOps pipeline configuration",
      "conditional": {
        "cicdTool": "azure-devops"
      }
    },
    {
      "path": "Dockerfile",
      "isTemplate": true,
      "description": "Docker configuration for containerized testing",
      "conditional": {
        "utilities.includeDocker": true
      }
    },
    {
      "path": ".gitignore",
      "isTemplate": true,
      "description": "Git ignore patterns"
    },
    {
      "path": "README.md",
      "isTemplate": true,
      "description": "Project documentation and setup guide"
    },
    {
      "path": "Config/TestSettings.cs",
      "isTemplate": true,
      "description": "Test configuration settings"
    },
    {
      "path": "Config/EnvConfig.cs",
      "isTemplate": true,
      "description": "Environment configuration manager"
    },
    {
      "path": "Pages/BasePage.cs",
      "isTemplate": true,
      "description": "Base page class with common functionality"
    },
    {
      "path": "Pages/LoginPage.cs",
      "isTemplate": true,
      "description": "Login page object"
    },
    {
      "path": "Pages/HomePage.cs",
      "isTemplate": true,
      "description": "Home page object"
    },
    {
      "path": "Utils/ScreenshotHelper.cs",
      "isTemplate": true,
      "description": "Screenshot capture utility"
    },
    {
      "path": "Utils/WaitHelpers.cs",
      "isTemplate": true,
      "description": "Custom wait utilities"
    },
    {
      "path": "Utils/DataReader.cs",
      "isTemplate": true,
      "description": "Test data file reader"
    },
    {
      "path": "Tests/BaseTest.cs",
      "isTemplate": true,
      "description": "Base test class with setup and teardown"
    },
    {
      "path": "Tests/LoginTests.cs",
      "isTemplate": true,
      "description": "Login test suite"
    },
    {
      "path": "Data/dev.json",
      "isTemplate": true,
      "description": "Development environment test data"
    },
    {
      "path": "Data/qa.json",
      "isTemplate": true,
      "description": "QA environment test data"
    },
    {
      "path": "Data/users.json",
      "isTemplate": true,
      "description": "User test data"
    },
    {
      "path": "Utils/Logger.cs",
      "isTemplate": true,
      "description": "Logging utility"
    },
    {
      "path": "Utils/BrowserFactory.cs",
      "isTemplate": true,
      "description": "Browser factory for Playwright"
    },
    {
      "path": "Utils/RetryHelper.cs",
      "isTemplate": true,
      "description": "Retry mechanism for flaky tests"
    },
    {
      "path": "Features/Login.feature",
      "isTemplate": true,
      "description": "Sample login feature",
      "conditional": {
        "testingPattern": "bdd"
      }
    },
    {
      "path": "StepDefinitions/LoginSteps.cs",
      "isTemplate": true,
      "description": "SpecFlow step definitions",
      "conditional": {
        "testingPattern": "bdd"
      }
    }
  ],
  "supportedCombination": {
    "testingType": "web",
    "framework": "playwright",
    "language": "csharp",
    "testRunner": "nunit",
    "buildTool": "nuget"
  },
  "dynamicSupport": {
    "reportingTools": [
      "allure",
      "extent-reports",
      "nunit-reports"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops",
      "circleci"
    ],
    "testingPatterns": [
      "page-object-model",
      "bdd"
    ]
  }
}