{
  "id": "web-csharp-selenium-nunit-nuget",
  "displayName": "C# Selenium NUnit Framework",
  "description": "Production-ready Selenium automation framework with C# and NUnit",
  "version": "2.0.0",
  "supportsDynamic": true,
  "supportedCombination": {
    "testingType": "web",
    "framework": "selenium",
    "language": "csharp",
    "testRunner": "nunit",
    "buildTool": "nuget"
  },
  "dynamicSupport": {
    "reportingTools": ["allure", "extent-reports", "nunit-html"],
    "cicdTools": ["jenkins", "github-actions", "gitlab-ci", "azure-devops", "circleci"],
    "testingPatterns": ["page-object-model", "bdd"]
  },
  "toolVersions": {
    "dotnet": "8.0",
    "selenium": "4.16.0",
    "nunit": "4.0.1"
  },
  "files": [
    {"path": "{{projectName}}.csproj", "isTemplate": true},
    {"path": "appsettings.json", "isTemplate": true},
    {"path": "README.md", "isTemplate": true},
    {"path": ".gitignore", "isTemplate": false},
    {"path": "Jenkinsfile", "isTemplate": true, "conditional": {"cicdTool": "jenkins"}},
    {"path": ".github/workflows/tests.yml", "isTemplate": true, "conditional": {"cicdTool": "github-actions"}},
    {"path": ".gitlab-ci.yml", "isTemplate": true, "conditional": {"cicdTool": "gitlab-ci"}},
    {"path": "azure-pipelines.yml", "isTemplate": true, "conditional": {"cicdTool": "azure-devops"}},
    {"path": ".circleci/config.yml", "isTemplate": true, "conditional": {"cicdTool": "circleci"}},
    {"path": "Dockerfile", "isTemplate": true},
    {"path": "Config/ConfigReader.cs", "isTemplate": true},
    {"path": "Pages/BasePage.cs", "isTemplate": true},
    {"path": "Pages/LoginPage.cs", "isTemplate": true},
    {"path": "Utils/DriverManager.cs", "isTemplate": true},
    {"path": "Tests/LoginTests.cs", "isTemplate": true},
    {"path": "Features/Login.feature", "isTemplate": true, "conditional": {"testingPattern": "bdd"}},
    {"path": "StepDefinitions/LoginSteps.cs", "isTemplate": true, "conditional": {"testingPattern": "bdd"}}
  ],
  "directories": ["logs", "screenshots", "reports"]
}