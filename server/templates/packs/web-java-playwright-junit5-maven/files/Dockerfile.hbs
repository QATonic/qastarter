# {{projectName}} - Playwright Test Automation with JUnit5
# Multi-stage Dockerfile for running Playwright tests

FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app

# Copy pom.xml and download dependencies
COPY pom.xml ./
RUN mvn dependency:go-offline -B

# Copy source code
COPY src ./src

# Build the project
RUN mvn compile -DskipTests

# Test stage
FROM mcr.microsoft.com/playwright/java:v1.40.0-jammy AS test
WORKDIR /app

# Copy Maven
COPY --from=maven:3.9-eclipse-temurin-17 /usr/share/maven /usr/share/maven
ENV PATH="/usr/share/maven/bin:${PATH}"

# Copy built application
COPY --from=build /app ./
COPY --from=build /root/.m2 /root/.m2

# Set environment variables
ENV BROWSER=chromium
ENV HEADLESS=true
ENV TEST_ENV=qa

# Create directories for test results
RUN mkdir -p /app/target/surefire-reports /app/target/screenshots

# Default command runs all tests
ENTRYPOINT ["mvn", "test"]
CMD ["-Dheadless=true", "-Dbrowser=chromium"]
