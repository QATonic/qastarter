package {{javaPackage}}.listeners;

import {{javaPackage}}.utils.Log;
import {{javaPackage}}.utils.ScreenshotUtils;
{{#if (eq reportingTool "extent-reports")}}
import {{javaPackage}}.utils.ExtentManager;
import com.aventstack.extentreports.ExtentTest;
import com.aventstack.extentreports.Status;
{{/if}}
{{#if (eq reportingTool "allure")}}
import {{javaPackage}}.utils.AllureManager;
{{/if}}
import org.testng.ITestContext;
import org.testng.ITestListener;
import org.testng.ITestResult;

/**
 * TestNG Listener - Handles test events, logging, and reporting.
 */
public class TestListener implements ITestListener {

    @Override
    public void onStart(ITestContext context) {
        Log.info("=======================================");
        Log.info("TEST SUITE: " + context.getName());
        Log.info("=======================================");
{{#if (eq reportingTool "extent-reports")}}
        ExtentManager.getInstance();
{{/if}}
    }

    @Override
    public void onFinish(ITestContext context) {
        Log.info("Suite finished: " + context.getName());
{{#if (eq reportingTool "extent-reports")}}
        ExtentManager.flush();
{{/if}}
    }

    @Override
    public void onTestStart(ITestResult result) {
        Log.info("TEST START: " + getTestName(result));
{{#if (eq reportingTool "extent-reports")}}
        ExtentManager.createTest(getTestName(result), result.getMethod().getDescription());
{{/if}}
    }

    @Override
    public void onTestSuccess(ITestResult result) {
        Log.info("TEST PASSED: " + getTestName(result));
{{#if (eq reportingTool "extent-reports")}}
        ExtentTest test = ExtentManager.getTest();
        if (test != null) {
            test.log(Status.PASS, "Test passed");
        }
{{/if}}
    }

    @Override
    public void onTestFailure(ITestResult result) {
        Log.error("TEST FAILED: " + getTestName(result));
        Log.error("Failure: " + result.getThrowable().getMessage());

        String screenshotPath = ScreenshotUtils.capture("FAILED_" + getTestName(result));

{{#if (eq reportingTool "extent-reports")}}
        ExtentTest test = ExtentManager.getTest();
        if (test != null) {
            test.log(Status.FAIL, "Test failed: " + result.getThrowable().getMessage());
            if (screenshotPath != null) {
                test.addScreenCaptureFromPath(screenshotPath);
            }
        }
{{/if}}
{{#if (eq reportingTool "allure")}}
        byte[] screenshot = ScreenshotUtils.captureAsBytes();
        if (screenshot != null) {
            AllureManager.attachScreenshot("Screenshot on Failure", screenshot);
        }
{{/if}}
    }

    @Override
    public void onTestSkipped(ITestResult result) {
        Log.warn("TEST SKIPPED: " + getTestName(result));
{{#if (eq reportingTool "extent-reports")}}
        ExtentTest test = ExtentManager.getTest();
        if (test != null) {
            test.log(Status.SKIP, "Test skipped");
        }
{{/if}}
    }

    private String getTestName(ITestResult result) {
        return result.getTestClass().getRealClass().getSimpleName() + "." + result.getMethod().getMethodName();
    }
}