{
  "id": "web-java-playwright-junit5-maven",
  "displayName": "Java Playwright JUnit5 Maven Framework",
  "name": "Java Playwright JUnit5 Maven Framework",
  "description": "Production-ready Playwright automation framework with flexible patterns, reporting, and CI/CD options",
  "version": "1.0.0",
  "supportsDynamic": true,
  "supportedCombination": {
    "testingType": "web",
    "framework": "playwright",
    "language": "java",
    "testRunner": "junit5",
    "buildTool": "maven"
  },
  "dynamicSupport": {
    "reportingTools": [
      "allure",
      "extent-reports",
      "junit-reports"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops",
      "circleci"
    ],
    "testingPatterns": [
      "page-object-model",
      "bdd"
    ]
  },
  "toolVersions": {
    "java": "17",
    "playwright": "1.41.0",
    "junit5": "5.10.1",
    "maven": "3.9.0",
    "log4j": "2.22.0",
    "extentreports": "5.1.1",
    "allure": "2.25.0"
  },
  "files": [
    {
      "path": "pom.xml",
      "isTemplate": true,
      "description": "Maven build configuration with Playwright and JUnit5 dependencies"
    },
    {
      "path": "README.md",
      "isTemplate": true,
      "description": "Complete setup and usage documentation"
    },
    {
      "path": ".gitignore",
      "isTemplate": false,
      "description": "Git ignore rules for Java/Maven projects"
    },
    {
      "path": "Jenkinsfile",
      "isTemplate": true,
      "description": "Jenkins declarative pipeline for CI/CD",
      "conditional": {
        "cicdTool": "jenkins"
      }
    },
    {
      "path": ".github/workflows/tests.yml",
      "isTemplate": true,
      "description": "GitHub Actions workflow for CI/CD",
      "conditional": {
        "cicdTool": "github-actions"
      }
    },
    {
      "path": ".gitlab-ci.yml",
      "isTemplate": true,
      "description": "GitLab CI pipeline configuration",
      "conditional": {
        "cicdTool": "gitlab-ci"
      }
    },
    {
      "path": "azure-pipelines.yml",
      "isTemplate": true,
      "description": "Azure DevOps pipeline configuration",
      "conditional": {
        "cicdTool": "azure-devops"
      }
    },
    {
      "path": ".circleci/config.yml",
      "isTemplate": true,
      "description": "CircleCI pipeline configuration",
      "conditional": {
        "cicdTool": "circleci"
      }
    },
