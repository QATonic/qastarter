package {{javaPackage}}.listeners;

import {{javaPackage}}.utils.Log;
import org.testng.IRetryAnalyzer;
import org.testng.ITestResult;

/**
 * TestNG retry analyzer for handling flaky tests.
 * Automatically retries failed tests up to a configurable limit.
 */
public class RetryAnalyzer implements IRetryAnalyzer {
    
    private static final int MAX_RETRY_COUNT = 2;
    private int retryCount = 0;
    
    @Override
    public boolean retry(ITestResult result) {
        if (retryCount < MAX_RETRY_COUNT) {
            retryCount++;
            Log.warn("Retrying test '" + result.getName() + "' - Attempt " + retryCount + " of " + MAX_RETRY_COUNT);
            return true;
        }
        return false;
    }
    
    /**
     * Get the current retry count
     * @return Current retry count
     */
    public int getRetryCount() {
        return retryCount;
    }
    
    /**
     * Get the maximum retry count
     * @return Maximum retry count
     */
    public static int getMaxRetryCount() {
        return MAX_RETRY_COUNT;
    }
}
