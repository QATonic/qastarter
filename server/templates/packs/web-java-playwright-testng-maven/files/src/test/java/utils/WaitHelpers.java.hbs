package utils;

import com.microsoft.playwright.Page;

public class WaitHelpers {
    
    public static void waitForElement(Page page, String selector, int timeout) {
        page.waitForSelector(selector, new Page.WaitForSelectorOptions()
                .setTimeout(timeout)
                .setState(com.microsoft.playwright.options.WaitForSelectorState.VISIBLE));
    }

    public static void waitForElement(Page page, String selector) {
        waitForElement(page, selector, 30000);
    }

    public static void waitForUrl(Page page, String urlPattern, int timeout) {
        page.waitForURL(urlPattern, new Page.WaitForURLOptions().setTimeout(timeout));
    }

    public static void waitForUrl(Page page, String urlPattern) {
        waitForUrl(page, urlPattern, 30000);
    }

    public static void sleep(int milliseconds) {
        try {
            Thread.sleep(milliseconds);
        } catch (InterruptedException e) {
            Thread.currentThread().interrupt();
        }
    }
}
