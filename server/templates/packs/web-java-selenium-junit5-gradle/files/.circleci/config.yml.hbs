version: 2.1

orbs:
  gradle: circleci/gradle@3.0.0

executors:
  java-executor:
    docker:
      - image: cimg/openjdk:{{toolVersions.java}}-browsers
    working_directory: ~/repo
    environment:
      GRADLE_OPTS: -Xmx3200m

jobs:
  test-chrome:
    executor: java-executor
    steps:
      - checkout
      
      - restore_cache:
          keys:
            - v1-gradle-{{raw}}{{ checksum "build.gradle" }}{{/raw}}
            - v1-gradle-
      
      - run:
          name: Grant execute permission for gradlew
          command: chmod +x gradlew
      
      - run:
          name: Build Project
          command: ./gradlew build -x test
      
      - save_cache:
          paths:
            - ~/.gradle
          key: v1-gradle-{{raw}}{{ checksum "build.gradle" }}{{/raw}}
      
      - run:
          name: Run Tests with Chrome
          command: ./gradlew test -Dbrowser=chrome -Denv=qa
      {{#if (eq reportingTool "allure")}}
      
      - run:
          name: Generate Allure Report
          when: always
          command: ./gradlew allureReport
      {{/if}}
      
      - store_test_results:
          path: build/test-results
      {{#if (eq reportingTool "allure")}}
      
      - store_artifacts:
          path: build/allure-results
          destination: allure-results
      
      - store_artifacts:
          path: build/reports/allure-report
          destination: allure-report
      {{/if}}
      {{#if (eq reportingTool "extent-reports")}}
      
      - store_artifacts:
          path: reports/extent-report.html
          destination: extent-report
      {{/if}}
      {{#if (eq reportingTool "testng-reports")}}
      
      - store_artifacts:
          path: build/reports/tests/test
          destination: testng-reports
      {{/if}}
      
      - store_artifacts:
          path: reports/screenshots
          destination: screenshots
      
      - store_artifacts:
          path: logs
          destination: logs

  test-firefox:
    executor: java-executor
    steps:
      - checkout
      
      - restore_cache:
          keys:
            - v1-gradle-{{raw}}{{ checksum "build.gradle" }}{{/raw}}
            - v1-gradle-
      
      - run:
          name: Grant execute permission for gradlew
          command: chmod +x gradlew
      
      - run:
          name: Run Tests with Firefox
          command: ./gradlew test -Dbrowser=firefox -Denv=qa
      {{#if (eq reportingTool "allure")}}
      
      - run:
          name: Generate Allure Report
          when: always
          command: ./gradlew allureReport
      {{/if}}
      
      - store_test_results:
          path: build/test-results
      {{#if (eq reportingTool "allure")}}
      
      - store_artifacts:
          path: build/allure-results
          destination: allure-results
      
      - store_artifacts:
          path: build/reports/allure-report
          destination: allure-report
      {{/if}}
      {{#if (eq reportingTool "extent-reports")}}
      
      - store_artifacts:
          path: reports/extent-report.html
          destination: extent-report
      {{/if}}
      {{#if (eq reportingTool "testng-reports")}}
      
      - store_artifacts:
          path: build/reports/tests/test
          destination: testng-reports
      {{/if}}
      
      - store_artifacts:
          path: reports/screenshots
          destination: screenshots
      
      - store_artifacts:
          path: logs
          destination: logs

workflows:
  version: 2
  test-all-browsers:
    jobs:
      - test-chrome
      - test-firefox
