name: Test Automation

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]

jobs:
  test:
    runs-on: ubuntu-latest
    
    steps:
      - uses: actions/checkout@v4
      
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'
          cache: '{{#if (eq buildTool "maven")}}maven{{else}}gradle{{/if}}'

{{#if (eq framework "playwright")}}
      - name: Install Playwright Browsers
        run: {{#if (eq buildTool "maven")}}mvn exec:java -e -D exec.mainClass=com.microsoft.playwright.CLI -D exec.args="install --with-deps"{{else}}./gradlew playwright install{{/if}}
{{/if}}

      - name: Run Tests
        run: {{#if (eq buildTool "maven")}}mvn clean test -Dheadless=true{{else}}./gradlew clean test -Dheadless=true{{/if}}
{{#if (eq reportingTool "allure")}}

      - name: Generate Allure Report
        if: always()
        run: {{#if (eq buildTool "maven")}}mvn allure:report{{else}}./gradlew allureReport{{/if}}

      - name: Upload Allure Results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: allure-results
          path: {{#if (eq buildTool "maven")}}target/allure-results{{else}}build/allure-results{{/if}}
{{/if}}
{{#if (eq reportingTool "extent-reports")}}

      - name: Upload ExtentReports
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: extent-reports
          path: reports/
{{/if}}

      - name: Upload Screenshots
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: screenshots
          path: screenshots/