trigger:
  branches:
    include:
      - main
      - develop

pool:
  vmImage: 'ubuntu-latest'

variables:
  NODE_VERSION: '{{toolVersions.node}}'
  TEST_ENV: 'qa'
  HEADLESS: 'true'

strategy:
  matrix:
    chromium:
      BROWSER: 'chromium'
    firefox:
      BROWSER: 'firefox'

steps:
  - task: NodeTool@0
    inputs:
      versionSpec: '{{toolVersions.node}}'
    displayName: 'Install Node.js {{toolVersions.node}}'

  - script: npm ci
    displayName: 'Install dependencies'

  - script: npx playwright install --with-deps $(BROWSER)
    displayName: 'Install Playwright browsers'

  - script: npm test
    displayName: 'Run tests'
    env:
      BROWSER: $(BROWSER)
      TEST_ENV: $(TEST_ENV)
      HEADLESS: $(HEADLESS)

{{#if (eq reportingTool "allure")}}
  - script: npm run report:generate
    displayName: 'Generate Allure Report'
    condition: always()

  - task: PublishBuildArtifacts@1
    displayName: 'Publish Allure Results'
    condition: always()
    inputs:
      PathtoPublish: 'allure-results'
      ArtifactName: 'allure-results-$(BROWSER)'

  - task: PublishBuildArtifacts@1
    displayName: 'Publish Allure Report'
    condition: always()
    inputs:
      PathtoPublish: 'allure-report'
      ArtifactName: 'allure-report-$(BROWSER)'
{{/if}}

{{#if (eq reportingTool "jest-html")}}
  - task: PublishBuildArtifacts@1
    displayName: 'Publish HTML Report'
    condition: always()
    inputs:
      PathtoPublish: 'test-results/test-report.html'
      ArtifactName: 'html-report-$(BROWSER)'
{{/if}}

  - task: PublishBuildArtifacts@1
    displayName: 'Publish Screenshots'
    condition: failed()
    inputs:
      PathtoPublish: 'screenshots'
      ArtifactName: 'screenshots-$(BROWSER)'

  - task: PublishBuildArtifacts@1
    displayName: 'Publish Logs'
    condition: always()
    inputs:
      PathtoPublish: 'logs'
      ArtifactName: 'logs-$(BROWSER)'
