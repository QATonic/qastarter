{
  "id": "web-javascript-playwright-jest-npm",
  "displayName": "JavaScript Playwright Jest Framework",
  "name": "JavaScript Playwright Jest Framework",
  "description": "Modern UI automation framework with Playwright, Page Object Model, and GitHub Actions CI/CD",
  "version": "1.0.0",
  "supportsDynamic": true,
  "supportedCombination": {
    "testingType": "web",
    "framework": "playwright",
    "language": "javascript",
    "testRunner": "jest",
    "buildTool": "npm"
  },
  "dynamicSupport": {
    "reportingTools": [
      "jest-html",
      "allure"
    ],
    "cicdTools": [
      "github-actions",
      "gitlab-ci",
      "azure-devops",
      "circleci",
      "jenkins"
    ],
    "testingPatterns": [
      "page-object-model",
      "bdd"
    ]
  },
  "toolVersions": {
    "node": "20",
    "playwright": "1.41.0",
    "jest": "29.7.0",
    "jest-playwright-preset": "3.0.1"
  },
  "files": [
    {
      "path": "package.json",
      "isTemplate": true,
      "description": "NPM package configuration with dependencies"
    },
    {
      "path": "README.md",
      "isTemplate": true,
      "description": "Complete setup and usage documentation"
    },
    {
      "path": ".gitignore",
      "isTemplate": false,
      "description": "Git ignore rules for Node.js projects"
    },
    {
      "path": ".env.example",
      "isTemplate": false,
      "description": "Example environment variables"
    },
    {
      "path": "jest.config.js",
      "isTemplate": true,
      "description": "Jest configuration with Playwright preset"
    },
    {
      "path": ".github/workflows/tests.yml",
      "isTemplate": true,
      "description": "GitHub Actions CI/CD workflow",
      "conditional": {
        "cicdTool": "github-actions"
      }
    },
    {
      "path": "Jenkinsfile",
      "isTemplate": true,
      "description": "Jenkins CI/CD pipeline",
      "conditional": {
        "cicdTool": "jenkins"
      }
    },
    {
      "path": "azure-pipelines.yml",
      "isTemplate": true,
      "description": "Azure DevOps CI/CD pipeline",
      "conditional": {
        "cicdTool": "azure-devops"
      }
    },
    {
      "path": "config/env.config.js",
      "isTemplate": true,
      "description": "Environment configuration management"
    },
    {
      "path": "config/test.config.js",
      "isTemplate": true,
      "description": "Test configuration and settings"
    },
    {
      "path": "pages/BasePage.js",
      "isTemplate": true,
      "description": "Base page class with common functionality"
    },
    {
      "path": "pages/LoginPage.js",
      "isTemplate": true,
      "description": "Login page object"
    },
    {
      "path": "pages/HomePage.js",
      "isTemplate": true,
      "description": "Home page object"
    },
    {
      "path": "utils/logger.js",
      "isTemplate": true,
      "description": "Winston logger utility"
    },
    {
      "path": "utils/screenshotHelper.js",
      "isTemplate": true,
      "description": "Screenshot capture utility"
    },
    {
      "path": "utils/waitHelpers.js",
      "isTemplate": true,
      "description": "Wait utilities for element interactions"
    },
    {
      "path": "utils/dataReader.js",
      "isTemplate": true,
      "description": "Test data reader for JSON/CSV"
    },
    {
      "path": "tests/login.test.js",
      "isTemplate": true,
      "description": "Login test suite"
    },
    {
      "path": "tests/setup.js",
      "isTemplate": true,
      "description": "Test setup and teardown"
    },
    {
      "path": "data/dev.json",
      "isTemplate": true,
      "description": "Development environment data"
    },
    {
      "path": "data/qa.json",
      "isTemplate": true,
      "description": "QA environment data"
    },
    {
      "path": "data/users.json",
      "isTemplate": true,
      "description": "User test data"
    },
    {
      "path": "Dockerfile",
      "isTemplate": true,
      "description": "Docker configuration",
      "conditional": {
        "utilities.includeDocker": true
      }
    },
    {
      "path": ".dockerignore",
      "isTemplate": false,
      "description": "Docker ignore rules"
    },
    {
      "path": "features/login.feature",
      "isTemplate": true,
      "description": "Sample login feature",
      "conditional": {
        "testingPattern": "bdd"
      }
    },
    {
      "path": "step-definitions/loginSteps.js",
      "isTemplate": true,
      "description": "Cucumber-js step definitions",
      "conditional": {
        "testingPattern": "bdd"
      }
    },
    {
      "path": "docker-compose.yml",
      "isTemplate": true,
      "description": "Docker Compose for Playwright testing",
      "conditional": {
        "utilities.includeDockerCompose": true
      }
    }
  ],
  "directories": [
    "test-results",
    "playwright-report",
    "logs",
    "screenshots",
    "trace"
  ]
}