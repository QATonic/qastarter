const environments = {
  dev: {
    baseUrl: process.env.DEV_BASE_URL || 'https://your-dev-app-url.com',
    apiUrl: process.env.DEV_API_URL || 'https://api.your-dev-app-url.com',
    timeout: 30000,
    retries: 2
  },
  
  qa: {
    baseUrl: process.env.QA_BASE_URL || 'https://your-qa-app-url.com',
    apiUrl: process.env.QA_API_URL || 'https://api.your-qa-app-url.com',
    timeout: 30000,
    retries: 2
  },
  
  staging: {
    baseUrl: process.env.STAGING_BASE_URL || 'https://your-staging-app-url.com',
    apiUrl: process.env.STAGING_API_URL || 'https://api.your-staging-app-url.com',
    timeout: 30000,
    retries: 1
  },
  
  prod: {
    baseUrl: process.env.PROD_BASE_URL || 'https://your-prod-app-url.com',
    apiUrl: process.env.PROD_API_URL || 'https://api.your-prod-app-url.com',
    timeout: 30000,
    retries: 0
  }
};

/**
 * Get current environment configuration
 */
export function getEnvironment() {
  const env = process.env.TEST_ENV || 'dev';
  
  if (!environments[env]) {
    throw new Error(`Unknown environment: ${env}. Available: ${Object.keys(environments).join(', ')}`);
  }
  
  return environments[env];
}

/**
 * Get base URL for current environment
 */
export function getBaseUrl() {
  return getEnvironment().baseUrl;
}

/**
 * Get API URL for current environment
 */
export function getApiUrl() {
  return getEnvironment().apiUrl;
}

export default environments;
