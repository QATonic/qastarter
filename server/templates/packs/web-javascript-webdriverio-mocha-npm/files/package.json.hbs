{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "Web automation framework with WebdriverIO, Mocha, and JavaScript",
  "type": "module",
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "test:chrome": "wdio run ./wdio.conf.js --chrome",
    "test:firefox": "wdio run ./wdio.conf.js --firefox",
    "test:headless": "wdio run ./wdio.conf.js --headless",
{{#if (eq reportingTool "allure")}}
    "report": "allure generate allure-results --clean && allure open",
    "report:generate": "allure generate allure-results --clean"
{{else if (eq reportingTool "mochawesome")}}
    "report": "open reports/mochawesome.html || xdg-open reports/mochawesome.html || start reports/mochawesome.html"
{{else}}
    "report": "echo 'Test results available in console output'"
{{/if}}
  },
  "keywords": ["webdriverio", "mocha", "selenium", "e2e", "testing", "automation"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@wdio/cli": "^8.30.0",
    "@wdio/local-runner": "^8.30.0",
    "@wdio/mocha-framework": "^8.30.0",
    "@wdio/spec-reporter": "^8.30.0",
{{#if (eq reportingTool "allure")}}
    "@wdio/allure-reporter": "^8.30.0",
    "allure-commandline": "^2.25.0",
{{/if}}
{{#if (eq reportingTool "mochawesome")}}
    "mochawesome": "^7.1.3",
    "mochawesome-report-generator": "^6.2.0",
{{/if}}
{{#if (eq testingPattern "bdd")}}
    "@wdio/cucumber-framework": "^8.30.0",
    "@cucumber/cucumber": "^10.0.0",
{{/if}}
    "wdio-chromedriver-service": "^8.1.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
