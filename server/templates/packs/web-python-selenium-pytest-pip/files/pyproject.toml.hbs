[tool.black]
line-length = 88
target-version = ['py310']
include = '\.pyi?$'

[tool.isort]
profile = "black"
multi_line_output = 3
line_length = 88

[tool.pylint.messages_control]
disable = [
"C0111", # missing-docstring
"C0103", # invalid-name (we use custom naming conventions)
]
max-line-length = 100