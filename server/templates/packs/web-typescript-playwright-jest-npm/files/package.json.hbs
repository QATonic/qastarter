{
"name": "{{projectName}}",
"version": "1.0.0",
"description": "Playwright automation framework with TypeScript and Jest",
"scripts": {
{{#if (eq testingPattern "bdd")}}
"test": "cucumber-js",
"test:headed": "HEADLESS=false cucumber-js",
"test:parallel": "cucumber-js --parallel 4",
{{else}}
"test": "jest",
"test:headed": "HEADLESS=false jest",
"test:parallel": "jest --maxWorkers=4",
{{/if}}
{{#if (eq reportingTool "allure")}}
"report": "allure generate allure-results --clean && allure open",
"report:generate": "allure generate allure-results --clean"
{{else if (eq reportingTool "junit")}}
"report": "echo 'JUnit XML reports generated in test-results/'"
{{else}}
"report": "open test-results/test-report.html || xdg-open test-results/test-report.html || start
test-results/test-report.html"
{{/if}}
},
"devDependencies": {
"playwright": "^{{toolVersions.playwright}}",
"jest": "^{{toolVersions.jest}}",
"jest-playwright-preset": "^{{toolVersions.jestPlaywrightPreset}}",
"typescript": "^{{toolVersions.typescript}}",
"ts-jest": "^29.1.1",
"ts-node": "^10.9.2",
"@types/jest": "^29.5.11",
"@types/node": "^20.10.6",
"winston": "^3.11.0",
"dotenv": "^16.3.1",
{{#if (eq reportingTool "jest-html")}}
"jest-html-reporter": "^{{toolVersions.jestHtmlReporter}}",
{{/if}}
{{#if (eq reportingTool "allure")}}
{{#if (eq testingPattern "bdd")}}
"allure-cucumberjs": "^2.15.2",
"allure-commandline": "^{{toolVersions.allureCommandline}}",
{{else}}
"@jest/reporters": "^29.7.0",
"allure-jest": "^{{toolVersions.allureJest}}",
"allure-commandline": "^{{toolVersions.allureCommandline}}",
{{/if}}
{{/if}}
{{#if (eq reportingTool "junit")}}
"jest-junit": "^{{toolVersions.jestJunit}}",
{{/if}}
{{#if (eq testingPattern "bdd")}}
"@cucumber/cucumber": "^{{toolVersions.cucumber}}",
"@types/cucumber": "^7.0.0",
{{/if}}
"@playwright/test": "^{{toolVersions.playwright}}"
}
}