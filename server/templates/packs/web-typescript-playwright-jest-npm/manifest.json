{
  "id": "web-typescript-playwright-jest-npm",
  "displayName": "TypeScript Playwright Jest Framework",
  "description": "Production-ready Playwright automation framework with TypeScript and Jest",
  "version": "2.0.0",
  "supportsDynamic": true,
  "supportedCombination": {
    "testingType": "web",
    "framework": "playwright",
    "language": "typescript",
    "testRunner": "jest",
    "buildTool": "npm"
  },
  "dynamicSupport": {
    "reportingTools": [
      "allure",
      "jest-html"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops",
      "circleci"
    ],
    "testingPatterns": [
      "page-object-model",
      "bdd"
    ]
  },
  "toolVersions": {
    "node": "18+",
    "playwright": "1.41.0",
    "jest": "29.7.0"
  },
  "files": [
    {
      "path": "package.json",
      "isTemplate": true
    },
    {
      "path": ".eslintrc.json",
      "isTemplate": true
    },
    {
      "path": ".prettierrc",
      "isTemplate": true
    },
    {
      "path": "tsconfig.json",
      "isTemplate": true
    },
    {
      "path": "README.md",
      "isTemplate": true
    },
    {
      "path": ".gitignore",
      "isTemplate": true
    },
    {
      "path": "config/ConfigReader.ts",
      "isTemplate": true
    },
    {
      "path": "config/dev.json",
      "isTemplate": false
    },
    {
      "path": "pages/BasePage.ts",
      "isTemplate": true
    },
    {
      "path": "pages/LoginPage.ts",
      "isTemplate": true
    },
    {
      "path": "utils/PlaywrightManager.ts",
      "isTemplate": true
    },
    {
      "path": "tests/login.spec.ts",
      "isTemplate": true
    },
    {
      "path": ".circleci/config.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "circleci"
      }
    },
    {
      "path": ".github/workflows/tests.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "github-actions"
      }
    },
    {
      "path": ".gitlab-ci.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "gitlab-ci"
      }
    },
    {
      "path": "azure-pipelines.yml",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "azure-devops"
      }
    },
    {
      "path": "config/env.config.ts",
      "isTemplate": true
    },
    {
      "path": "config/test.config.ts",
      "isTemplate": true
    },
    {
      "path": "cucumber.js",
      "isTemplate": true
    },
    {
      "path": "data/users.json",
      "isTemplate": true,
      "conditional": {
        "utilities.dataProvider": true
      }
    },
    {
      "path": "data/qa.json",
      "isTemplate": true
    },
    {
      "path": "docker-compose.yml",
      "isTemplate": true,
      "conditional": {
        "utilities.includeDockerCompose": true
      }
    },
    {
      "path": "Dockerfile",
      "isTemplate": true,
      "conditional": {
        "utilities.includeDocker": true
      }
    },
    {
      "path": "features/login.feature",
      "isTemplate": true,
      "conditional": {
        "testingPattern": "bdd"
      }
    },
    {
      "path": "Jenkinsfile",
      "isTemplate": true,
      "conditional": {
        "cicdTool": "jenkins"
      }
    },
    {
      "path": "jest-playwright.config.js",
      "isTemplate": true
    },
    {
      "path": "jest.config.js",
      "isTemplate": true
    },
    {
      "path": "pages/HomePage.ts",
      "isTemplate": true
    },
    {
      "path": "step-definitions/loginSteps.ts",
      "isTemplate": true,
      "conditional": {
        "testingPattern": "bdd"
      }
    },
    {
      "path": "support/hooks.ts",
      "isTemplate": true
    },
    {
      "path": "support/world.ts",
      "isTemplate": true
    },
    {
      "path": "tests/login.test.ts",
      "isTemplate": true
    },
    {
      "path": "tests/setup.ts",
      "isTemplate": true
    },
    {
      "path": "types/global.d.ts",
      "isTemplate": true
    },
    {
      "path": "utils/dataReader.ts",
      "isTemplate": true,
      "conditional": {
        "utilities.dataProvider": true
      }
    },
    {
      "path": "utils/logger.ts",
      "isTemplate": true
    },
    {
      "path": "utils/screenshotHelper.ts",
      "isTemplate": true
    },
    {
      "path": "utils/ScreenshotUtils.ts",
      "isTemplate": true
    },
    {
      "path": "utils/waitHelpers.ts",
      "isTemplate": true
    }
  ],
  "directories": [
    "logs",
    "screenshots",
    "reports"
  ]
}