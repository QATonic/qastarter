{
  "id": "web-typescript-playwright-jest-npm",
  "displayName": "TypeScript Playwright Jest Framework",
  "description": "Production-ready Playwright automation framework with TypeScript and Jest",
  "version": "2.0.0",
  "supportsDynamic": true,
  "supportedCombination": {
    "testingType": "web",
    "framework": "playwright",
    "language": "typescript",
    "testRunner": "jest",
    "buildTool": "npm"
  },
  "dynamicSupport": {
    "reportingTools": [
      "allure",
      "jest-html"
    ],
    "cicdTools": [
      "jenkins",
      "github-actions",
      "gitlab-ci",
      "azure-devops",
      "circleci"
    ],
    "testingPatterns": [
      "page-object-model",
      "bdd"
    ]
  },
  "toolVersions": {
    "node": "18+",
    "playwright": "1.41.0",
    "jest": "29.7.0"
  },
  "files": [
    {
      "path": "package.json",
      "isTemplate": true
    },
    {
      "path": "tsconfig.json",
      "isTemplate": true
    },
    {
      "path": "README.md",
      "isTemplate": true
    },
    {
      "path": ".gitignore",
      "isTemplate": true
    },
    {
      "path": "config/ConfigReader.ts",
      "isTemplate": true
    },
    {
      "path": "config/dev.json",
      "isTemplate": false
    },
    {
      "path": "pages/BasePage.ts",
      "isTemplate": true
    },
    {
      "path": "pages/LoginPage.ts",
      "isTemplate": true
    },
    {
      "path": "utils/PlaywrightManager.ts",
      "isTemplate": true
    },
    {
      "path": "tests/login.spec.ts",
      "isTemplate": true
    }
  ],
  "directories": [
    "logs",
    "screenshots",
    "reports"
  ]
}
