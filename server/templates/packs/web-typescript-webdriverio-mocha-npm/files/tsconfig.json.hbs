{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha", "@wdio/globals/types"],
    "lib": ["ES2022"]
  },
  "include": [
    "test/**/*.ts",
    "config/**/*.ts",
    "wdio.conf.ts"
  ]
}
